import matplotlib.pyplot as plt
import numpy as np
from scipy.io import loadmat
import sklearn.linear_model as lm
from sklearn import model_selection, tree
from scipy import stats
import pandas as pd

filename = 'dataerror.csv'

df = pd.read_csv(filename)
raw_data = df.get_values() 



Error_logann= raw_data[:, 0]
Error_logann= np.array(Error_logann, dtype=np.float)

Error_logreg= raw_data[:, 1]
Error_logreg= np.array(Error_logreg, dtype=np.float)

Error_baseline= raw_data[:, 2]
Error_baseline= np.array(Error_baseline, dtype=np.float)
K=10
z = (Error_logreg-Error_logann)
zb = z.mean()
nu = K-1
sig =  (z-zb).std()  / np.sqrt(K-1)
alpha = 0.05

zL = zb + sig * stats.t.ppf(alpha/2, nu);
zH = zb + sig * stats.t.ppf(1-alpha/2, nu);

if zL <= 0 and zH >= 0 :
    print('Classifiers are not significantly different')        
else:
    print('Classifiers are significantly different.')
    
# Test if classifiers are significantly different - ann and logistic regression
z = (Error_logann-Error_logreg)
zb = z.mean()
nu = K-1
sig =  (z-zb).std()  / np.sqrt(K-1)
alpha = 0.05

zL = zb + sig * stats.t.ppf(alpha/2, nu);
zH = zb + sig * stats.t.ppf(1-alpha/2, nu);

if zL <= 0 and zH >= 0 :
    print('ANN (1) and LogReg (2) classifiers are NOT significantly different')        
else:
    print('ANN (1) and LogReg (2) classifiers are significantly different.')

# Test if classifiers are significantly different - ANN and baseline
z = (Error_baseline-Error_logann)
zb = z.mean()
nu = K-1
sig =  (z-zb).std()  / np.sqrt(K-1)
alpha = 0.05

zL = zb + sig * stats.t.ppf(alpha/2, nu);
zH = zb + sig * stats.t.ppf(1-alpha/2, nu);

if zL <= 0 and zH >= 0 :
    print('ANN (1) and Baseline (3) classifiers are NOT significantly different')        
else:
    print('ANN (1) and Baseline (3) classifiers are significantly different.')
    
# Test if classifiers are significantly - baseline and logistic regression
z = (Error_baseline-Error_logreg)
zb = z.mean()
nu = K-1
sig =  (z-zb).std()  / np.sqrt(K-1)
alpha = 0.05

zL = zb + sig * stats.t.ppf(alpha/2, nu);
zH = zb + sig * stats.t.ppf(1-alpha/2, nu);

if zL <= 0 and zH >= 0 :
    print('Baseline (3) and LogReg (2) classifiers are NOT significantly different')        
else:
    print('Baseline (3) and LogReg (2) classifiers are significantly different.')
   
    
# Boxplot to compare classifier error distributions
plt.figure()
plt.boxplot(np.concatenate((Error_baseline, Error_logreg, Error_logann)))
plt.xlabel('Baseline vs. Logistic Regression vs. Decision Tree')
plt.ylabel('Cross-validation error [%]')

plt.show()
